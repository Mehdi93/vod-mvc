@model IEnumerable<VideoOnDemand.Models.Film>

@{
    ViewBag.Title = "ListeFilm";
}

<h2>ListeFilm</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @if (Session["LoginUserID"] != null)
    {<a href="../Users/deconnexion">Deconnexion</a>}
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nationality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDateFilm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddDateFilm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actors)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Theme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDateFilm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDateFilm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actors)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>