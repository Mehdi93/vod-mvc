@model VideoOnDemand.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Users", FormMethod.Post))
{
    //this is for create form tag
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Message
        </div>
    }
    <div class="form-horizontal">
        <div class="row">
            <div class="col-xs-3">
                @Html.LabelFor(model => model.Pseudo, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-xs-3">
                @Html.EditorFor(model => model.Pseudo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pseudo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-xs-3">
                <label>@Html.LabelFor(model => model.Mdp, htmlAttributes: new { @class = "control-label" })</label>
            </div>
            <div class="col-xs-3">
                @Html.EditorFor(model => model.Mdp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mdp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-xs-2">
                <input type="submit" class="btn btn-default" value="Login" />
            </div>
        </div>


    </div>
}
@* This below line is for create javascript section *@


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>